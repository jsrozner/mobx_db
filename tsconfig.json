{
  "compilerOptions": {
    "module": "esnext", // commonjs?
    "sourceMap": true,
//    "target": "es5",
    "target": "es2015",
        "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
